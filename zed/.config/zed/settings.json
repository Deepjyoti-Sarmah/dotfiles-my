{
  "autosave": "on_focus_change",
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 18,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "icon_theme": "Zed (Default)",
  "vim_mode": true,
  "relative_line_numbers": true,
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "base_keymap": "VSCode",

  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },

  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },

  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "git_panel": {
    "button": true,
    "dock": "left"
  },
  "outline_panel": {
    "button": false
  },
  "agent": {
    "button": false
  },
  "status_bar": {
    "active_language_button": false
  },

  "terminal": {
    "button": true,
    // "copy_on_select": true,
    "blinking": "on",
    "font_family": "JetBrainsMono Nerd Font Mono"
    // "env": {
    //   "EDITOR": "zed --wait"
    // }
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark Hard"
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "file_finder": {
    "modal_max_width": "medium"
  },

  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],

  // Only show error on tab
  "tabs": {
    "show_diagnostics": "errors"
  }
}
